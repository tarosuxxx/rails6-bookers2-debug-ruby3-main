<div class="container">
  <h2>検索結果</h2>
  
  <p>
    検索対象: **<%= @range %>** /
    検索キーワード: **<%= @word %>** /
    検索手法: **<%= @method %>**
  </p>

  <% if @range == "User" %>
    <h3>ユーザー一覧</h3>
    <%= render 'users/index', users: @users %> 
  <% else %>
    <h3>投稿一覧</h3>
    <%= render 'books/index', books: @books %> 
  <% end %>
</div>